<link href="~/css/product/productpage.css" rel="stylesheet" />
<script src="~/js/productpage/productpage.js"></script>




<div class="container header">
  <div class="row">

    <div class="col-12 d-flex justify-content-end mb-5">
      <a asp-area="" asp-controller="Products" asp-action="AddProductPage" class="tooltip-container">
        <i class="bi bi-plus-square"></i>
        <span class="tooltip-text">Ürün Ekle</span>
       </a>
      
      </div>
    <div class="col-12 mb-3">
      <h1>Ürünler</h1>
    </div>
    <div class="col-12 ">
      <table id="productTable" class="table table-striped table-bordered dataTable display" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Ürün Adı</th>
            <th>Ürün Cinsi</th>
            <th>Ürün Resmi</th>
            <th>Ürün Fiyatı</th>
            <th>İşlem</th>
          </tr>
        </thead>
        <tbody>
          <!-- Dinamik olarak doldurulacak -->
        </tbody>
      </table>
    </div>
    <div class="modal fade" id="productDetailModal" tabindex="-1" aria-labelledby="productDetailModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalProductName">Ürün Adı</h5>
            <span id="modalCategory" class="badge bg-secondary ms-auto">Kategori</span>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p><strong>Fiyat:</strong> <span id="modalProductPrice"></span> TL</p>
            <img id="modalProductImg" src="" alt="Ürün Resmi" class="img-fluid mb-3" />

            <h6>Hammaddeler:</h6>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Ad</th>
                  <th>Birim</th>
                  <th>Miktar</th>
                </tr>
              </thead>
              <tbody id="modalRawMaterials">
                <!-- Dinamik olarak doldurulacak -->
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>